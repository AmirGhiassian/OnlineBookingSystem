@model ProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Username's Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

    body {
    background-color: #f0f8ff;
    }
    .profile-card {
        box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        transition: 0.3s;
        border-radius: 0.3125rem; /* 5px */
    }
    .profile-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.2);
    }
    .profile-img {
        margin-top: -3.125rem; /* 50px */
        border: 0.3125rem solid #fff; /* 5px */
    }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 mt-5">
                <div class="profile-card p-4">
                    <img src="@Model.PhotoPath" alt="User photo" class="img-fluid profile-img mx-auto d-block rounded-circle" />
                    <h1 class="text-center mt-3">@Model.Username's Profile</h1>
                    <p class="text-center">Email: @Model.Email</p>
                    <div class="text-center">
                        <form method="post" enctype="multipart/form-data" action="UploadPhoto" class="mt-3">
                            <div class="text-center">
                                <button type="submit" class="btn btn-secondary">Upload Photo</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <a class="btn btn-primary" asp-action="ViewReservation">View Reservations</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
