@model List<OnlineBookingSystem.Models.Restaurant>
<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        .restaurant-image {
            width: 400px;
            height: auto;
            object-fit: contain;
            border: 1px solid #000;
        }
        
    </style>
</head>

<body>
    <div class="container">
        <h2 class="text-center my-4" style="color: #007bff;">Restaurant List</h2>

        <div class="list-group">
            @foreach (var restaurant in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@restaurant.Name</h5>
                        <small>@restaurant.Phone</small>
                    </div>
                    <p class="mb-1">@restaurant.Address</p>
                    <p class="mb-1">@restaurant.Description</p>
                    <img src="@restaurant.Image" class="img-fluid restaurant-image d-block" alt="Restaurant Image">
                    <br />
                    <a asp-action="MakeNewRes" asp-route-restaurantId="@restaurant.RestaurantId"
                        class="btn btn-primary">Make Reservation</a>
                </div>
                <br/>
            }
        </div>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
