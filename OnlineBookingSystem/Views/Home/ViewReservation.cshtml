@model List<Reservation>

<h1>Your Reservations</h1>

<div class="container">
    <div class="row">
        @foreach (var reservation in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h2 class="card-title">@reservation.Name</h2>
                        <p class="card-text">@reservation.Date @reservation.Time</p>
                        <a class="btn btn-primary" asp-action="EditReservation" asp-route-id="@reservation.ReservationId">Edit</a>
                        <form asp-action="DeleteReservation" asp-route-id="@reservation.ReservationId" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>