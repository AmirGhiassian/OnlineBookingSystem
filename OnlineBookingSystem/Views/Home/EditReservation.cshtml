@model OnlineBookingSystem.Models.Wrapper
<!DOCTYPE html>
<html>

<head>
    <title>Edit Reservation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <style>
        .bg-image {
            background-image: url('/images/login_page.png');
            height: 100%;
            width: 100%;
            filter: blur(8px);
            -webkit-filter: blur(8px);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: fixed;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: rgba(255, 255, 255, 0.5);
            z-index: -1;
        }

        .form-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 5rem;
            /* Using rem for padding */
            border-radius: 0.625rem;
            /* 10px equivalent in rem */
            height: 30rem;
            /* Height in rem */
            width: 30rem;
            /* Width in rem */
            max-width: 50rem;
            /* Increased max-width for larger area, in rem */
            background: #FFFFFF;
            /* Solid white background */
            box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1), 0 0.375rem 1.25rem rgba(0, 0, 0, 0.19);
            /* Shadow in rem */
            z-index: 2;
            /* Ensure it's above the bg-overlay */
        }
    </style>
</head>

<body>
    <div class="bg-image"></div>
    <div class="bg-overlay"></div>
    <div class="container form-container">
        @{
            var action = Model.Reservation.isEmpty() ? "MakeNewRes" : "EditReservation";
            var headingText = Model.Reservation.isEmpty() ? "Make a Reservation" : "Edit Reservation";
        }
        <h2 class="text-center my-4" style="color: #007bff;">@headingText - @Model.Restaurant.Name</h2>
        <form method="POST" asp-action="@action">
            <div asp-validation-summary="All"></div>
            <input asp-for="Reservation.RestaurantId" type="hidden" value="@Model.Restaurant.RestaurantId" />
            <!-- Hidden field for RestaurantId -->
            <input asp-for="Reservation.CustId" type="hidden" value="@Model.Customer.CustID" />
            <!-- Hidden field for CustomerId -->
            <!-- Hidden field for RestaurantName -->
            <div class="form-group">
                <label asp-for="Reservation.Name">Name</label>
                <input asp-for="Reservation.Name" class="form-control" required>
            </div>
            <!-- Add other fields as necessary -->
            <input type="submit" class="btn btn-primary"></input>
            <!-- Submit button -->
        </form>
    </div>
    <!-- Add your scripts here -->
</body>

</html>